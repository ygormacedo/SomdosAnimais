<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo"

        />

    <ImageView
        android:id="@+id/idDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoId"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cao"

        />

    <ImageView
        android:id="@+id/idCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoId"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gato"

        />

    <ImageView
        android:id="@+id/idLeon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idDog"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/leao"

        />

    <ImageView
        android:id="@+id/idMonkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idCat"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/macaco"


        />

    <ImageView
        android:id="@+id/idSheep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idLeon"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ovelha"


        />

    <ImageView
        android:id="@+id/idCow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idMonkey"
        android:background="@drawable/vaca"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="30dp"


        />

    <ImageView
        android:id="@+id/direitosAutorais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idSheep"
        android:background="@drawable/direitos"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"

        />


</RelativeLayout>